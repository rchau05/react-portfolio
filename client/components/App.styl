@require '../lib/vars.styl'

*
  box-sizing border-box

body
  background green
  font-family helvetica
  color darken(white, 10%)
  font-size 18px

h1
  margin 20px 0

pre
  font-family mono
  line-height 1.5
  border-radius 3px
  border 1px solid border-gray

small
  display block

.page
  padding 0

.siteTitle
  background black
  display flex
  align-items center

  +below(420px)
    display block

  img
    display inline-block
    width 80px
    height 80px
    margin-right 20px

    +below(420px)
      display block
      margin 0 auto

.siteContentLeft
  background green
  float left
  width 60%
  padding 20px

.siteContentRight
  float right
  width 40%
  padding 20px

.portrait
  border-radius 50%
  margin 0 auto
  position relative
  height 75%
  width 75%
  padding-left 20px

.socialNetwork
  text-align center

.socialPopout
  padding 10px
  height 60px
  width 60px
  border-radius 50%

.footer
  background black
  height 50px
  text-align center

.hl
  font-weight bold
  color react-blue
.App
  min-width 320px

  h1
    color green
    font-weight 300
    font-size 52px
    padding-left 20px

  p
    color white

.nav
  background darken(black, 10%)
  padding-left 20px

  a
    display inline-block
    padding 20px
    text-transform uppercase
    text-decoration none
    color darken(white, 20%)
    &:hover
      color white

  .active
    background black


