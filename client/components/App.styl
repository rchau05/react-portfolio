@require '../lib/vars.styl'

*
  box-sizing border-box

body
  background green
  font-family helvetica
  color darken(white, 10%)
  font-size 18px

h1
  margin 20px 0

h3 
  font-size 1.5em
  text-align center

pre
  font-family mono
  line-height 1.5
  border-radius 3px
  border 1px solid border-gray

small
  display block

.page
  padding 0

.siteTitle
  background black
  display flex
  align-items center

  +below(420px)
    display block

  img
    display inline-block
    width 80px
    height 80px
    margin-right 20px

    +below(420px)
      display block
      margin 0 auto

.siteContentLeft
  background green
  float left
  width 60%
  padding 20px
  margin 4em 0 0 0

.siteContentRight
  float right
  width 40%
  padding 20px

.portrait
  border-radius 50%
  position relative
  height 20em
  width 20em
  right 5em

.projectScreenshot
  float left
  padding 1%
  height 250px
  width 33.33%

.aboutSummary
  color white
  line-height 2em
  margin 0 auto
  width 80%

.aboutTechnologies
  top 4em
  position relative

.socialNetwork
  text-align center

.socialPopout
  padding 10px
  height 60px
  width 60px
  border-radius 50%

.footer
  background black
  height 50px
  position relative
  text-align center
  top 80px

.contactPhoto
  display block
  padding 20px
  margin 0 auto
  width 200px
  height 200px
  border-radius 200px

.hl
  font-weight bold
  color react-blue
.App
  min-width 320px

  h1
    color green
    font-weight 300
    font-size 52px
    padding-left 20px

  h2
    color white
    text-align center
    text-decoration none

  p
    color white

  .myName
    font-size 4em
    margin 0

.nav
  background darken(black, 10%)
  padding-left 20px

  a
    display inline-block
    padding 20px
    text-transform uppercase
    text-decoration none
    color darken(white, 20%)
    &:hover
      color white

  .active
    background black


